<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cse3310.personaltutoringservice.Prehirepage">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="302dp"
        android:layout_height="218dp"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:alpha="0.3"
        android:src="@drawable/bg_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/viewb"
        android:layout_width="135dp"

        android:layout_height="38dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="100dp"
        android:background="@color/Button"
        android:onClick="info"
        android:text="Viewinfo"
        android:textColor="#fff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ViewReviewsB"
        android:layout_width="135dp"

        android:layout_height="35dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="152dp"
        android:background="@color/Button"
        android:onClick="viewrevs"
        android:text="View Reviews"
        android:textColor="#fff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ViewsceduleB"
        android:layout_width="135dp"

        android:layout_height="35dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="204dp"
        android:background="@color/Button"
        android:onClick="viewscedule"
        android:text="View Schedule"
        android:textColor="#fff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/HireB"
        android:layout_width="136dp"

        android:layout_height="34dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="264dp"
        android:background="@color/Button"
        android:onClick="hiretutor"
        android:text="Hire Tutor"
        android:textColor="#fff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/email"
        android:layout_width="131dp"
        android:layout_height="46dp"
        android:layout_marginEnd="124dp"
        android:layout_marginTop="312dp"
        android:background="@color/Button"
        android:onClick="sendemail"
        android:text="Send Email"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sms"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="128dp"
        android:layout_marginTop="380dp"
        android:background="@color/Button"
        android:onClick="sendtext"
        android:text="Send Text"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
